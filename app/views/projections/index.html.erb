<h1>Listing projections</h1>

<table>
  <tr>
    <th>Player</th>
    <th>Year</th>
    <th>Site</th>
    <th>Stats</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projections.each do |projection| %>
  <tr>
    <td><%= projection.player_id %></td>
    <td><%= projection.year %></td>
    <td><%= projection.site %></td>
    <td><%= projection.stats_id %></td>
    <td><%= link_to 'Show', projection %></td>
    <td><%= link_to 'Edit', edit_projection_path(projection) %></td>
    <td><%= link_to 'Destroy', projection, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

